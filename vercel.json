{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "regions": ["cdg1"],
  "functions": {
    "api/woocommerce/[...path].js": { "memory": 512, "maxDuration": 15 },
    "api/checkout/create-order.js": { "memory": 256, "maxDuration": 15 }
  },
  "rewrites": [
    { "source": "/api/woocommerce/:path*", "destination": "/api/woocommerce/[...path]" },
    { "source": "/api/checkout/create-order", "destination": "/api/checkout/create-order" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://www.impexo.fr" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Accept, Nonce, Cart-Token" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Expose-Headers", "value": "Nonce, Set-Cookie, Cart-Token" }
      ]
    }
  ]
}